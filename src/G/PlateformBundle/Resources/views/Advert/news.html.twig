{% extends "GPlateformBundle::layout.html.twig" %}


{% block title %}

{% endblock %}

{% block body %}




    <div class="row">
        <div class="col s12 m6  ">
            <div class="card grey darken-1">
                <div class="card-content white-text">

                    <span class="card-title">Lastest News</span>
                    <div class="collection grey darken-1 black-text">

                        {% for article in listArticle %}
                            <li>
                                <a href="{{ path('g_plateform_view', {'id': article.id}) }}"class="collection-item grey lighten-2 black-text">
                                    <span class="badge"></span>
                                    {{ article.title }}, le {{ article.date|date('d/m/Y') }}
                                </a>
                            </li>
                        {% else %}
                            <li>Pas de news pour l'instant ! </li>
                        {% endfor %}

                    </div>
                </div>
            </div>
        </div>
        <div class="col s6 m6">
            <div class="card grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title">Lastest Song</span>
                    <iframe width="100%" height="450" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/246207539&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false&amp;visual=true"></iframe>
                </div>
            </div>
        </div>
    </div>
    </div>



{% endblock %}