
{% extends "GPlateformBundle::layout.html.twig" %}
{% block title %}

{% endblock %}

{% block body %}
<div class="row">
    <div class="col s12 m6  ">
        <div class="card grey darken-1">
            <div class="card-content white-text">

                <span class="card-title center ">
                <p>Delete </p>
                    </span>
                <div class="collection black-text">

                    {% for article in listArticle %}
                        <li>
                            <a href="{{ path('g_plateform_delete', {'id': article.id}) }}"class="collection-item  black-text">
                                <span class="badge"></span>
                                {{ article.title }}, le {{ article.date|date('d/m/Y') }}
                            </a>
                        </li>
                    {% else %}
                        <li>Pas de news à supprimer pour l'instant ! </li>
                    {% endfor %}

                </div>
            </div>
        </div>
   </div>
    <div class="col s12 m6  ">
        <div class="card grey darken-1">
            <div class="card-content white-text">

                <span class="card-title center">
                <p>Edit </p>
                    </span>
                <div class="collection  black-text">

                    {% for article in listArticle %}
                        <li>
                            <a href="{{ path('g_plateform_edit', {'id': article.id}) }}" class="collection-item  black-text">
                                <span class="badge"></span>
                                {{ article.title }}, le {{ article.date|date('d/m/Y') }}
                            </a>
                        </li>
                    {% else %}
                        <li>Pas de news à supprimer pour l'instant ! </li>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}